{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "ml-service/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/ml/(.*)",
      "dest": "/ml-service/app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    }
  ]
}
